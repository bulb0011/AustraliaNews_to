<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_676">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_20"
        android:background="@color/bg_white" />

    <View style="@style/DividerHorizontal" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_126"
        android:background="@drawable/corner_rectangle_white_selector"
        android:gravity="center"
        android:text="@string/quxiao"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_sp_14" />

</LinearLayout>