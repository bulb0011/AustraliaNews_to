<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ruanyun.australianews.widget.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topBarRightImageEnable="true"
        app:topBarTitleText="专栏"
        app:topBarRightTextEnable="true"
        app:topBarRightTextColor="@color/theme_color"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">
                
                <ImageView
                    android:id="@+id/imge_zhuanlan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />
                
                <Button
                    android:id="@+id/bt_tv"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_theme_corners_15"
                    android:text="更新中"
                    android:textColor="#ffffffff"
                    android:textSize="11sp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="16dp"
                    />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="拯救疫情下的行业"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

            <WebView
                android:id="@+id/tv_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_horizontal"
                tools:ignore="WebViewLayout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f5f5f5"
                android:layout_marginTop="20dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                >
            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f5f5f5"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rl_goumai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/ll_mianfei"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限时免费"
                android:textColor="#305F8B"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/tv_mianfeiuedu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#999999"
                android:text="¥112.00"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jiage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_goumai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付："
                android:drawablePadding="10dp"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_goumaijiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#305F8B"
                android:text="¥112.00"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>


        <Button
            android:id="@+id/bt_add_vip"
            android:layout_width="98dp"
            android:layout_height="32dp"
            android:background="@drawable/bt_houmaihuiyuan"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="订阅"
            android:textColor="@color/white"
            android:textSize="14dp"
            />

    </RelativeLayout>
</RelativeLayout>