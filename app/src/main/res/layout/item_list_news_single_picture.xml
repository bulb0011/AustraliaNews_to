<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_px_325" xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/text_size_px_16"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/text_size_px_60"
        android:layout_height="@dimen/text_size_px_60"
        android:layout_marginLeft="@dimen/text_size_px_27"
        android:layout_marginTop="@dimen/text_size_px_73"
        android:layout_toRightOf="@+id/view"
        android:src="@drawable/comment_icon_selector"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_select">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/text_size_px_326"
            android:layout_height="@dimen/text_size_px_226"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_px_43"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:src="@drawable/default_img" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_px_40"
            android:layout_toLeftOf="@+id/iv_photo"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="2"
                android:paddingLeft="@dimen/text_size_px_27"
                android:paddingRight="@dimen/text_size_px_43"
                android:text="舒服舒服是否舒服舒服舒服舒一舒服是否舒服舒服舒服舒服舒服是否舒服舒服舒服"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_sp_15" />

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_px_25"
                android:background="@drawable/corners_hot_bg_shape"
                android:paddingLeft="@dimen/text_size_px_8"
                android:paddingRight="@dimen/text_size_px_8"
                android:text="热门"
                android:layout_marginTop="4dp"
                tools:visibility="visible"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_sp_10" />

        </RelativeLayout>



        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_alignBottom="@+id/iv_photo"
            android:layout_toLeftOf="@+id/iv_photo"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/text_size_px_2">

            <ImageView
                android:id="@+id/img_laba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_size_px_8"
                android:src="@drawable/laba"
                android:layout_marginLeft="@dimen/text_size_px_25"
                />


            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/text_size_px_25"
                android:paddingRight="@dimen/text_size_px_5"
                android:text="央视网  1w+浏览  2200评论  1小时前"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_sp_11" />

            <TextView
                android:id="@+id/tv_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_hot_bg_shape"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/text_size_px_8"
                android:paddingTop="@dimen/text_size_px_2"
                android:paddingRight="@dimen/text_size_px_8"
                android:text="已读"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_sp_10"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/DividerHorizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/text_size_px_43"
        android:layout_marginRight="@dimen/text_size_px_43" />

</RelativeLayout>
