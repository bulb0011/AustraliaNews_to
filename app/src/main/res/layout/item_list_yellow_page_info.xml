<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/text_size_px_1167"
    android:layout_height="@dimen/text_size_px_300"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/text_size_px_16"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/text_size_px_103"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_size_px_27"
        android:paddingRight="@dimen/text_size_px_16"
        android:layout_toRightOf="@+id/view"
        android:src="@drawable/comment_icon_selector"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_show_content"
        android:layout_width="@dimen/text_size_px_1064"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_select">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/text_size_px_326"
            android:layout_height="@dimen/text_size_px_226"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_px_27"
            android:layout_marginRight="@dimen/text_size_px_25"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_px_30"
            android:layout_toRightOf="@+id/iv_photo"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="@dimen/text_size_px_43"
            android:text="舒服舒服是否舒服舒服舒服舒一舒服是否舒服舒服舒服舒服舒服是否舒服舒服舒服"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_sp_16" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_photo"
            android:layout_toLeftOf="@+id/iv_call"
            android:layout_toRightOf="@+id/iv_photo"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/text_size_px_30"
            android:singleLine="true"
            android:text="iMover 爱家搬运"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_sp_12" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_photo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_size_px_43"
            android:src="@drawable/yellopages_btn_dial" />

        <View
            style="@style/DividerHorizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/text_size_px_43"
            android:layout_marginRight="@dimen/text_size_px_43" />

    </RelativeLayout>
</RelativeLayout>
