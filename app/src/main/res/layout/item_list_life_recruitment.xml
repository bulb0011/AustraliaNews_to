<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/text_size_px_1167"
    android:layout_height="@dimen/text_size_px_248"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/text_size_px_16"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/text_size_px_103"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_size_px_27"
        android:paddingRight="@dimen/text_size_px_16"
        android:layout_toRightOf="@+id/view"
        android:src="@drawable/comment_icon_selector"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_show_content"
        android:layout_width="@dimen/text_size_px_1064"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_select">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_px_27"
            android:layout_marginTop="@dimen/text_size_px_25"
            android:layout_marginBottom="@dimen/text_size_px_30"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="@dimen/text_size_px_33"
            android:text="2019年求租，环境很好"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_sp_15" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/text_size_px_27"
            android:background="@drawable/corners_stroke_blue_2dp_shape"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/text_size_px_10"
            android:paddingRight="@dimen/text_size_px_10"
            android:text="全职"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_sp_11" />

        <TextView
            android:id="@+id/tv_experience_requirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/text_size_px_24"
            android:layout_toRightOf="@+id/tv_type"
            android:background="@drawable/corners_stroke_red_2dp_shape"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/text_size_px_10"
            android:paddingRight="@dimen/text_size_px_10"
            android:text="经验不限"
            android:textColor="@color/distance_color"
            android:textSize="@dimen/text_size_sp_11" />


        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_size_px_53"
            android:layout_below="@+id/tv_type"
            android:layout_marginLeft="@dimen/text_size_px_27"
            android:layout_marginTop="@dimen/text_size_px_15"
            android:layout_marginBottom="@dimen/text_size_px_30"
            android:gravity="center"
            android:text="更新于 2018-12-23"
            android:textSize="@dimen/text_size_sp_12" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_update_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/text_size_px_20"
            android:includeFontPadding="false"
            android:layout_marginRight="@dimen/text_size_px_33"
            android:text="$460/周"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_sp_12" />

    </RelativeLayout>
</RelativeLayout>
