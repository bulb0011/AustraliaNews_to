<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_send_leave_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/et_leave_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_px_43"
        android:layout_marginTop="@dimen/text_size_px_24"
        android:layout_marginBottom="@dimen/text_size_px_24"
        android:layout_toLeftOf="@+id/tv_send"
        android:background="@drawable/bg_bgwhite_corners_39px"
        android:hint="请文明发言，遵守评论规则"
        android:maxLength="300"
        android:maxLines="4"
        android:paddingLeft="@dimen/text_size_px_37"
        android:paddingRight="@dimen/text_size_px_37"
        android:paddingTop="@dimen/text_size_px_15"
        android:paddingBottom="@dimen/text_size_px_15"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_sp_14" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="@dimen/text_size_px_190"
        android:layout_height="@dimen/text_size_px_87"
        android:layout_alignBottom="@+id/et_leave_message"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_sp_14" />


</RelativeLayout>

