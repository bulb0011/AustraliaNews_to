<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/text_size_px_16"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/text_size_px_60"
        android:layout_height="@dimen/text_size_px_60"
        android:layout_marginLeft="@dimen/text_size_px_27"
        android:layout_marginTop="@dimen/text_size_px_73"
        android:layout_toRightOf="@+id/view"
        android:src="@drawable/comment_icon_selector" />

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="@dimen/text_size_px_106"
        android:layout_height="@dimen/text_size_px_106"
        android:layout_marginLeft="@dimen/text_size_px_27"
        android:layout_marginTop="@dimen/text_size_px_50"
        android:layout_marginRight="@dimen/text_size_px_25"
        android:layout_toRightOf="@+id/iv_select"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_user_photo"
        android:layout_toRightOf="@+id/iv_user_photo"
        android:includeFontPadding="false"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_size_sp_14"
        tools:text="悉尼小可乐乐" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="@dimen/text_size_px_10"
        android:layout_toRightOf="@+id/iv_user_photo"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_sp_11"
        tools:text="1小时前" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="@dimen/text_size_px_25"
        android:layout_toRightOf="@+id/iv_user_photo"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_sp_16"
        tools:text="说得好！有道理" />


    <RelativeLayout
        android:id="@+id/rl_news_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_180"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/text_size_px_20"
        android:layout_marginRight="@dimen/text_size_px_43"
        android:layout_marginBottom="@dimen/text_size_px_36"
        android:layout_toRightOf="@+id/iv_user_photo"
        android:background="@color/bg_white">


        <ImageView
            android:id="@+id/iv_news_photo"
            android:layout_width="@dimen/text_size_px_210"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_size_px_17"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <ImageView
            android:id="@+id/iv_start_play"
            android:layout_width="@dimen/text_size_px_80"
            android:layout_height="@dimen/text_size_px_80"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_size_px_82"
            android:src="@drawable/video_click_play_selector" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_px_25"
            android:layout_toLeftOf="@+id/iv_news_photo"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:paddingLeft="@dimen/text_size_px_25"
            android:paddingRight="@dimen/text_size_px_14"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_sp_14"
            tools:text="舒服舒服是否舒服舒服舒服舒一舒服是否舒服舒服舒服舒服舒服是否舒服舒服舒舒服" />

    </RelativeLayout>

    <View
        style="@style/DividerHorizontal"
        android:layout_below="@+id/rl_news_info" />

</RelativeLayout>
