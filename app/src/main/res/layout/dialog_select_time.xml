<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/select_pop_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_120"
        android:layout_marginTop="@dimen/text_size_px_120"
        android:background="@color/bg_white" />

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_20"
        android:layout_below="@+id/datepicker"
        android:background="@color/bg_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_126"
        android:layout_below="@+id/view_line">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/quxiao"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_sp_14" />

        <TextView
            android:id="@+id/tv_determine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="@string/queren"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_sp_14" />

    </LinearLayout>

</RelativeLayout>
