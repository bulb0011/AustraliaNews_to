<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ruanyun.australianews.widget.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topBarTitleText="发布招聘信息" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_life_release_photo" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="Suburb" />

                <TextView
                        android:id="@+id/tv_city"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:drawablePadding="@dimen/text_size_px_20"
                        android:gravity="center_vertical|end"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_px_43"
                android:layout_marginRight="@dimen/text_size_px_43"
                android:layout_marginTop="@dimen/text_size_px_3"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/life_release_tip_style"
                    android:layout_height="@dimen/text_size_px_130"
                    android:text="公司介绍" />

                <EditText
                    android:id="@+id/et_company_profile"
                    style="@style/life_release_padding_size_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingBottom="@dimen/text_size_px_43"
                    android:gravity="start"
                    android:hint="请填写"
                    android:maxLength="500"
                    android:minLines="5"
                    android:textColor="@color/text_black" />

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="center_vertical|end"-->
                    <!--android:hint="600字以内"-->
                    <!--android:paddingTop="@dimen/text_size_px_40"-->
                    <!--android:paddingRight="@dimen/text_size_px_48"-->
                    <!--android:paddingBottom="@dimen/text_size_px_40" />-->

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="工作性质" />

                <TextView
                        android:id="@+id/tv_nature_of_the_work"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:drawablePadding="@dimen/text_size_px_20"
                        android:gravity="center_vertical|end"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="工资水平" />

                <EditText
                        android:id="@+id/et_wages"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="/小时 面议请填0"
                        android:inputType="numberDecimal"
                        android:maxLength="9"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="工作地点" />

                <EditText
                        android:id="@+id/et_work_place"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请填写"
                    android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_px_130"
                android:layout_marginLeft="@dimen/text_size_px_43"
                android:layout_marginTop="@dimen/text_size_px_3"
                android:layout_marginRight="@dimen/text_size_px_43"
                android:background="@color/white">

                <TextView
                    style="@style/life_release_tip_style"
                    android:text="公司名称" />

                <EditText
                    android:id="@+id/et_company_name"
                    style="@style/life_release_padding_size_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请填写"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="性别要求" />

                <TextView
                        android:id="@+id/tv_gender_requirements"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:hint="请选择"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="招聘人数" />

                <EditText
                        android:id="@+id/et_recruitment_count"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请填写"
                    android:maxLength="6"
                    android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="学历要求" />

                <TextView
                        android:id="@+id/tv_academic_requirements"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:hint="请选择"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="签证要求" />

                <TextView
                        android:id="@+id/tv_visa_requirements"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:drawablePadding="@dimen/text_size_px_20"
                        android:gravity="center_vertical|end"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_px_130"
                    android:layout_marginLeft="@dimen/text_size_px_43"
                    android:layout_marginTop="@dimen/text_size_px_3"
                    android:layout_marginRight="@dimen/text_size_px_43"
                    android:background="@color/white">

                <TextView
                        style="@style/life_release_tip_style"
                        android:text="经验要求" />

                <TextView
                        android:id="@+id/tv_experience_requirement"
                        style="@style/life_release_padding_size_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:hint="请选择"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_px_130"
                android:layout_marginLeft="@dimen/text_size_px_43"
                android:layout_marginTop="@dimen/text_size_px_3"
                android:layout_marginRight="@dimen/text_size_px_43"
                android:background="@color/white">

                <TextView
                    style="@style/life_release_tip_style"
                    android:text="行业要求" />

                <TextView
                    android:id="@+id/tv_industry_requirements"
                    style="@style/life_release_padding_size_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:textColor="@color/text_black" />

            </LinearLayout>

            <include layout="@layout/layout_life_release_details_fill_in" />

            <include layout="@layout/layout_life_release_contact" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
