<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"
    >

    <com.ruanyun.australianews.widget.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topBarTitleText="加入会员"
        app:topBarRightImageEnable="true"
        app:topBarRightTextColor="@color/theme_color"
        />


        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_white_corners_3"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >

                <TextView
                    android:id="@+id/tv_tishiwenz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIP会员"
                    android:textColor="#ff000000"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#ff999999"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_tishiwenz"
                    android:layout_marginRight="13dp"
                    />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#ff999999"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_tishiwenz"
                    android:layout_marginLeft="13dp"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_remincanpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                >
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/tv_quanyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="查看更多权益"
                android:textColor="#ff305f8b"
                android:textSize="12sp"
                />

        </LinearLayout>
    
    <Button
        android:id="@+id/bt_add_vip"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_yunajiao"
        android:text="立即加入VIP会员"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        />




</LinearLayout>