<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ruanyun.australianews.widget.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topBarRightText="完成"
        app:topBarRightTextEnable="true"
        app:topBarTitleText="设置密码" />


    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_164"
        android:background="@null"
        android:hint="输入旧密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="@dimen/text_size_px_47" />

    <View
        style="@style/DividerHorizontal"
        android:layout_marginLeft="@dimen/text_size_px_47"
        android:layout_marginRight="@dimen/text_size_px_47" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_164"
        android:background="@null"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="@dimen/text_size_px_47" />

    <View
        style="@style/DividerHorizontal"
        android:layout_marginLeft="@dimen/text_size_px_47"
        android:layout_marginRight="@dimen/text_size_px_47" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_164"
        android:background="@null"
        android:hint="再输入一次新密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="@dimen/text_size_px_47" />

    <View
        style="@style/DividerHorizontal"
        android:layout_marginLeft="@dimen/text_size_px_47"
        android:layout_marginRight="@dimen/text_size_px_47" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="@dimen/text_size_px_47"
        android:paddingTop="@dimen/text_size_px_55"
        android:paddingRight="@dimen/text_size_px_47"
        android:paddingBottom="@dimen/text_size_px_55"
        android:text="@string/"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_sp_16" />

</LinearLayout>
