<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ruanyun.australianews.widget.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topbar"
        app:topBarTitleText="浏览历史"
        app:topBarRightText="@string/guangli"
        app:topBarRightTextEnable="true"
        app:topBarViewLineEnable="false"/>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/text_size_px_105">

        <TextView
            android:id="@+id/tv_tab_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_sp_13"
            android:text="新闻"
            android:paddingTop="@dimen/text_size_px_7"
            android:drawableBottom="@drawable/tab_bottom_mark_selector"
            android:gravity="center"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/tv_tab_life"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_sp_13"
            android:text="生活服务"
            android:paddingTop="@dimen/text_size_px_7"
            android:drawableBottom="@drawable/tab_bottom_mark_selector"
            android:gravity="center"
            android:textColor="@color/text_black"/>


    </LinearLayout>

    <View style="@style/DividerHorizontal"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>