<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/text_size_px_16"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="90dp"
        android:layout_height="124dp"
        android:layout_toRightOf="@+id/view"
        android:src="@drawable/comment_icon_selector"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_show_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_select"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="90dp"
            android:layout_height="124dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_px_25"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="私人2013顶配福特翼虎四驱20T柴油自动"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_sp_16" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_px_25"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="3"
            android:layout_below="@id/tv_title"
            android:text="私人2013顶配福特翼虎四驱20T柴油自动"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/text_size_sp_13" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pic"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_marginLeft="16dp"
            android:includeFontPadding="false"
            android:text="更新于： 2018-12-23"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_sp_12" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pic"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/text_size_px_20"
            android:layout_marginRight="@dimen/text_size_px_33"
            android:text="$460/周"
            android:includeFontPadding="false"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_sp_12" />

    </RelativeLayout>
</RelativeLayout>
