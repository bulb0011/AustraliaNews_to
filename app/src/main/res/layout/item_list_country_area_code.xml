<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_size_px_145">

    <ImageView
        android:id="@+id/iv_area"
        android:layout_width="@dimen/text_size_px_100"
        android:layout_height="@dimen/text_size_px_70"
        android:layout_marginLeft="@dimen/text_size_px_40"
        android:layout_gravity="center_vertical"
        android:src="@drawable/login_icon_china"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_size_px_166"
        android:singleLine="true"
        android:text="@string/zhongguo"
        android:gravity="center_vertical"
        android:textColor="@color/text_black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_size_px_43"
        android:paddingRight="@dimen/text_size_px_43"
        android:singleLine="true"
        android:text="+86"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:textColor="@color/text_default"
        android:textSize="14sp"/>

    <View style="@style/DividerHorizontal"
        android:layout_marginLeft="@dimen/text_size_px_43"
        android:layout_gravity="bottom"/>

</FrameLayout>

