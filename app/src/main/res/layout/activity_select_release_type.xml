<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ruanyun.australianews.widget.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topBarTitleText="发布类型"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_186"
        android:gravity="center_vertical"
        android:text="请选择您要发布的内容类型"
        android:paddingLeft="@dimen/text_size_px_43"
        android:paddingRight="@dimen/text_size_px_43"
        android:textSize="@dimen/text_size_sp_17"
        android:textColor="@color/text_black"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_life"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_260"
        android:layout_marginLeft="@dimen/text_size_px_48"
        android:layout_marginRight="@dimen/text_size_px_48"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/release_icon_life"
                android:layout_marginLeft="@dimen/text_size_px_43"/>

            <TextView
                android:id="@+id/text_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_px_230"
                android:text="生活服务"
                android:textSize="@dimen/text_size_sp_15"
                android:layout_marginTop="@dimen/text_size_px_57"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_life"
                android:layout_marginTop="@dimen/text_size_px_20"
                android:layout_marginLeft="@dimen/text_size_px_230"
                android:text="发布各类生活服务"
                android:textSize="@dimen/text_size_sp_13"
                android:textColor="@color/text_color_666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_arrow_right"
                android:layout_marginRight="@dimen/text_size_px_52"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_yellow_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_px_260"
        android:layout_marginTop="@dimen/text_size_px_46"
        android:layout_marginLeft="@dimen/text_size_px_48"
        android:layout_marginRight="@dimen/text_size_px_48"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/release_icon_yellowpages"
                android:layout_marginLeft="@dimen/text_size_px_43"/>

            <TextView
                android:id="@+id/text_yellow_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_px_230"
                android:text="黄页信息"
                android:textSize="@dimen/text_size_sp_15"
                android:layout_marginTop="@dimen/text_size_px_57"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_px_230"
                android:text="发布企业黄页信息"
                android:textSize="@dimen/text_size_sp_13"
                android:layout_below="@+id/text_yellow_page"
                android:layout_marginTop="@dimen/text_size_px_20"
                android:textColor="@color/text_color_666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_arrow_right"
                android:layout_marginRight="@dimen/text_size_px_52"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>