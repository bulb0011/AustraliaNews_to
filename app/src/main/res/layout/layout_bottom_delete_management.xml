<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_delete_manage"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_size_px_126"
    android:visibility="gone"
    tools:visibility="visible">

    <View style="@style/DividerHorizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/text_size_px_1">

        <TextView
            android:id="@+id/tv_clear_empty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/text_size_px_1"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/qingkong"
            android:textColor="@color/text_default" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/text_size_px_1"
            android:layout_weight="1"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="@string/shanchu"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
