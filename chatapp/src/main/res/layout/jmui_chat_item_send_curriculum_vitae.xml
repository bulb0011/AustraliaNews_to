<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/jmui_chat_item_send_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/jmui_send_time_txt"
        style="@style/jmui_chat_text_date_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/jmui_fail_resend_ib"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/send_message_failed"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/jmui_sending_iv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp"
            android:src="@drawable/jmui_sending_img"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7dp"
            android:textSize="12sp"/>

        <RelativeLayout
            android:id="@+id/jmui_curriculum_vitae_rl"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/jmui_avatar_iv"
            android:background="@drawable/jmui_msg_custom_bg">

            <ImageView
                android:id="@+id/custom_user_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/default_user"/>

            <TextView
                android:id="@+id/custom_user_name"
                style="@style/jmui_msg_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/custom_user_avatar"
                tools:text="王某某"
                android:clickable="false"
                android:paddingBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="7dp"
                android:singleLine="true"/>

            <TextView
                style="@style/jmui_msg_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/custom_user_name"
                android:text="投递简历"
                android:textColor="#555"
                android:textSize="14sp"
                android:clickable="false"
                android:paddingBottom="0dp"
                android:paddingTop="11dp"
                android:paddingRight="18dp"/>

            <TextView
                android:id="@+id/custom_user_sex"
                style="@style/jmui_msg_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/custom_user_avatar"
                android:layout_below="@+id/custom_user_name"
                android:drawableLeft="@drawable/sex_selector"
                android:drawablePadding="4dp"
                android:paddingTop="10dp"
                android:autoLink="web"
                android:clickable="false"
                android:singleLine="true"
                tools:text="女"
                android:paddingRight="16dp"
                android:textColorLink="#157BFB"
                android:textColor="#646464"
                android:textSize="14sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/custom_user_age"
                style="@style/jmui_msg_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/custom_user_sex"
                android:layout_below="@+id/custom_user_name"
                android:drawableLeft="@drawable/icon_age"
                android:drawablePadding="4dp"
                android:paddingTop="10dp"
                android:autoLink="web"
                android:clickable="false"
                android:singleLine="true"
                tools:text="21岁"
                android:paddingRight="16dp"
                android:textColorLink="#157BFB"
                android:textColor="#646464"
                android:textSize="14sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/custom_user_year"
                style="@style/jmui_msg_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/custom_user_age"
                android:layout_below="@+id/custom_user_name"
                android:drawableLeft="@drawable/icon_time"
                android:drawablePadding="4dp"
                android:paddingTop="10dp"
                android:autoLink="web"
                android:clickable="false"
                android:singleLine="true"
                tools:text="1-2年"
                android:textColorLink="#157BFB"
                android:textColor="#646464"
                android:textSize="14sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/custom_user_position_salary"
                style="@style/jmui_msg_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/custom_user_avatar"
                android:paddingTop="0dp"
                android:maxWidth="300dp"
                tools:text="他正在找：双休文员 /期望薪资：面议"
                android:paddingRight="10dp"
                android:paddingLeft="13dp"
                android:paddingBottom="5dp"
                android:textColor="#646464"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/custom_resume"
                style="@style/jmui_msg_text_style"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_below="@+id/custom_user_position_salary"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_message"
                android:drawablePadding="6dp"
                android:text="查看简历"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:paddingLeft="20dp"
                android:textColorLink="#157BFB"
                android:textColor="#ff0000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/custom_call"
                style="@style/jmui_msg_text_style"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:drawablePadding="6dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/custom_user_position_salary"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_tel"
                android:text="拨打电话"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:paddingLeft="20dp"
                android:textColorLink="#157BFB"
                android:textColor="#ff0000"
                android:textSize="15sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_businessCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/business_card_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/business_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12.33dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="13.33dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nickUser"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.33dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#2C2C2C"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_userName"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.33dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#999999"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="183dp"
                android:layout_height="0.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16.67dp"
                android:background="#DCDCDC"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="个人名片"
                android:textColor="#989898"
                android:textSize="10sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/jmui_avatar_iv"
            style="@style/jmui_chat_item_sender_avatar_style"/>

    </LinearLayout>

</LinearLayout>